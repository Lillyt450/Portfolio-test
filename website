            <div class="flex justify-end">
                <button onclick="closeModal()" class="bg-black text-white px-4 py-2 rounded-md hover:bg-gray-800 transition-colors">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    // Portfolio section switching
    function showSection(section) {
        const graphicSection = document.getElementById('graphicDesign');
        const motionSection = document.getElementById('motionDesign');
        const graphicBtn = document.getElementById('graphicBtn');
        const motionBtn = document.getElementById('motionBtn');
        
        if (section === 'graphic') {
            graphicSection.classList.remove('hidden');
            motionSection.classList.add('hidden');
            graphicBtn.classList.add('section-active');
            graphicBtn.classList.remove('section-inactive');
            motionBtn.classList.add('section-inactive');
            motionBtn.classList.remove('section-active');
        } else {
            graphicSection.classList.add('hidden');
            motionSection.classList.remove('hidden');
            graphicBtn.classList.add('section-inactive');
            graphicBtn.classList.remove('section-active');
            motionBtn.classList.add('section-active');
            motionBtn.classList.remove('section-inactive');
        }
    }
    
    // Modal functionality
    function openModal(title, description) {
        const modal = document.getElementById('videoModal');
        const modalTitle = document.getElementById('modalTitle');
        const modalDescription = document.getElementById('modalDescription');
        
        modalTitle.textContent = title;
        modalDescription.textContent = description;
        modal.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
    }
    
    function closeModal() {
        const modal = document.getElementById('videoModal');
        modal.classList.add('hidden');
        document.body.style.overflow = 'auto';
    }
    
    // Close modal when clicking outside
    window.onclick = function(event) {
        const modal = document.getElementById('videoModal');
        if (event.target === modal) {
            closeModal();
        }
    }
    
    // Form submission (demo only)
    document.querySelector('form').addEventListener('submit', function(e) {
        e.preventDefault();
        alert('This is a demo form. In a real portfolio, this would send your message.');
    });
</script>
